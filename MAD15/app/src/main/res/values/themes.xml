<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MAD15" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Splash theme used by the launcher activity -->
    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- background color for splash -->
        <item name="windowSplashScreenBackground">?attr/colorSurface</item>
        <!-- icon shown in splash (use mipmap or drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <!-- duration (ms) used by system animation hint -->
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- after splash finishes, apply the normal theme -->
        <item name="postSplashScreenTheme">@style/Theme.MAD15</item>
    </style>

    <style name="Theme.MAD15" parent="Base.Theme.MAD15" />
</resources>